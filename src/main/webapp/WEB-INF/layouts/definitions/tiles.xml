<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <!--Layout template for CLIENTS -->
    <definition name="baseLayout" template="/WEB-INF/layouts/template/baseLayout.jsp">
        <put-attribute name="title" value="Sample Title"/>
        <put-attribute name="heading" value=""/>
        <put-attribute name="tagline" value=""/>
        <put-attribute name="navigation" value="/WEB-INF/layouts/template/navigation.jsp"/>
        <put-attribute name="content" value=""/>
        <put-attribute name="footer" value="/WEB-INF/layouts/template/footer.jsp"/>
    </definition>

    <!--Layout template for ADMIN-->
    <definition name="adminLayout" template="/WEB-INF/layouts/template/adminLayout.jsp">
        <put-attribute name="adminTitle" value="Sample Title"/>
        <put-attribute name="adminHeading" value=""/>
        <put-attribute name="adminTag" value=""/>
        <put-attribute name="adminNavigation" value="/WEB-INF/layouts/template/adminNavigation.jsp"/>
        <put-attribute name="adminContent" value=""/>
        <put-attribute name="adminFooter" value="/WEB-INF/layouts/template/footer.jsp"/>
    </definition>

    <!--Home for CLIENTS-->
    <definition name="home" extends="baseLayout">
        <put-attribute name="title" value=""/>
        <put-attribute name="heading" value="Welcome to Food Delivery"/>
        <put-attribute name="tag" value="Order your favorite foods easily"/>
        <put-attribute name="content" value="/WEB-INF/views/home.jsp"/>
    </definition>

    <!--Home for ADMIN-->
    <definition name="adminHome" extends="adminLayout">
        <put-attribute name="adminTitle" value="FoodDelivery"/>
        <put-attribute name="adminHeading" value="Welcome to the admin page"/>
        <put-attribute name="adminTag" value="Manage your sales"/>
        <put-attribute name="adminContent" value="/WEB-INF/views/adminHome.jsp"/>
    </definition>

    <!--Ingredients for ADMIN-->
    <definition name="ingredients" extends="adminLayout">
        <put-attribute name="adminTitle" value="FoodDelivery"/>
        <put-attribute name="adminHeading" value="Ingredients"/>
        <put-attribute name="adminTag" value="They are all listed here"/>
        <put-attribute name="adminContent" value="/WEB-INF/views/ingredients.jsp"/>
    </definition>

    <!--Add ingredient for ADMIN-->
    <definition name="addIngredient" extends="adminLayout">
        <put-attribute name="adminTitle" value="FoodDelivery"/>
        <put-attribute name="adminHeading" value="Add Ingredients"/>
        <put-attribute name="adminTag" value=""/>
        <put-attribute name="adminContent" value="/WEB-INF/views/addIngredient.jsp"/>
    </definition>

    <!--Login-->
    <definition name="login" extends="baseLayout">
        <put-attribute name="title" value="Login" />
        <put-attribute name="heading" value="Admin area" />
        <put-attribute name="tagline" value="" />
        <put-attribute name="content" value="/WEB-INF/views/login.jsp" />
    </definition>

</tiles-definitions>
